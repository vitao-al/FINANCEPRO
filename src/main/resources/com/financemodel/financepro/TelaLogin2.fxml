<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../css/Tela2.css"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Definição do grupo de botões -->
   <fx:define>
      <ToggleGroup fx:id="grupoMeta"/>
   </fx:define>
   <ImageView fitHeight="604.0" fitWidth="635.0" layoutX="-31.0" layoutY="-417.0"
              pickOnBounds="true" preserveRatio="true" rotate="-179.8"
              style="-fx-fit-height: 800; -fx-fit-width: 600; -fx-preserve-ratio: true;">
      <Image url="@../../../assets/fundoTela2.png"/>
   </ImageView>


   <Label layoutX="87.0" layoutY="7.0" prefHeight="76.0" prefWidth="448.0"
          style="-fx-font-family: Poppins; -fx-background-size: 30; -fx-font-weight: bold;"
          styleClass="label-titulo"
          text="NOS CONTE MAIS SOBRE ">
      <font>
         <Font name="Poppins Regular" size="28.0"/>
      </font>
      <textFill>
         <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
            <stops>
               <Stop>
                  <color>
                     <Color/>
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="1.0" green="1.0" blue="1.0"/>
                  </color>
               </Stop>
            </stops>
         </RadialGradient>
      </textFill>
   </Label>

   <Label layoutX="84.0" layoutY="63.0" prefHeight="40.0" prefWidth="416.0"
          style="-fx-font-size: 16;" styleClass="label-subtitulo"
          text="precisamos de alguns dados para continuar" textFill="#cf1212">
      <font>
         <Font name="Poppins Regular" size="12.0"/>
      </font>
   </Label>

   <Label layoutX="87.0" layoutY="103.0" prefHeight="32.0" prefWidth="377.0"
          styleClass="label-nome" text="Como prefere ser chamado(a)?"/>
   <TextField layoutX="84.0" layoutY="135.0" prefHeight="26.0" prefWidth="370.0"
              styleClass="TextField-nome"/>

   <Label layoutX="84.0" layoutY="170.0" prefHeight="18.0" prefWidth="223.0"
          styleClass="label-nome" text="Quais os seus pronomes ?"/>
   <TextField layoutX="84.0" layoutY="206.0" prefHeight="26.0" prefWidth="370.0"
              styleClass="TextField-nome"/>

   <TextField layoutX="84.0" layoutY="275.0" prefHeight="26.0" prefWidth="370.0"
              styleClass="TextField-nome"/>
   <Label layoutX="87.0" layoutY="245.0" styleClass="label-nome" text="Qual a sua renda mensal?"/>

   <Label layoutX="87.0" layoutY="308.0" prefHeight="23.0" prefWidth="198.0"
          styleClass="label-nome" text="Deseja criar uma meta?"/>

   <Label layoutX="446.0" layoutY="303.0" prefHeight="56.0" prefWidth="155.0"
          styleClass="label-info"
          text="*comece dizendo o quanto&#10;você quer economizar&#10;&#10;&#10;">
      <font>
         <Font size="11.0"/>
      </font>
   </Label>

   <!-- Botões ligados ao mesmo ToggleGroup -->
   <ToggleButton fx:id="btnSim" layoutX="87.0" layoutY="346.0" mnemonicParsing="false"
                 prefHeight="40.0" prefWidth="155.0" styleClass="Toggle-Button-nome"
                 text="Sim" toggleGroup="$grupoMeta"/>

   <ToggleButton fx:id="btnNao" layoutX="276.0" layoutY="346.0" mnemonicParsing="false"
                 prefHeight="40.0" prefWidth="165.0" styleClass="Toggle-Button-nome"
                 text="Não" toggleGroup="$grupoMeta"/>
</Pane>
